extend layout/_layout.jade

mixin discount(bg,name,sub)
	.pic-box
		.hoverimg.square(style=bg)
			a.overlay(href="products_detail.html") 
				.overlay_content MORE
		.caption
			a(href="products_detail.html")
				h3=name
			p.sub=sub
		.shop_funbox
			del 原價：2,000
			p.price(data-mark="NT$") 1,600
			ul.list-inline.shop_btn
				li
					button.btn.btn-link(type="button", data-toggle="tooltip", data-placement="top", title="加到最愛")
						i.fa.fa-heart-o
				li
					button.btn.btn-link(type="button", data-toggle="tooltip", data-placement="top", title="加到購物車")
						i.fi.flaticon-cart

mixin product(bg,name,sub)
	li.col-xs-6.col-sm-3.pic-box
		.hoverimg.square(style=bg)
			a.overlay(href="products_detail.html") 
				.overlay_content MORE
		.caption
			a(href="products.html")
				h3=name
			p.sub=sub
		.shop_funbox
			del 原價：2,000
			p.price(data-mark="NT$") 1,600
			ul.list-inline.shop_btn
				li
					button.btn.btn-link(type="button", data-toggle="tooltip", data-placement="top", title="加到最愛")
						i.fa.fa-heart-o
				li
					button.btn.btn-link(type="button", data-toggle="tooltip", data-placement="top", title="加到購物車")
						i.fi.flaticon-cart

